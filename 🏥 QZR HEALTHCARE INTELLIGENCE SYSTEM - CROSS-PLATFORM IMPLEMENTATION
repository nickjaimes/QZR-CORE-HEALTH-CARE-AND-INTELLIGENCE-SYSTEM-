        function updateStats(data) {
            document.getElementById('total-patients').textContent = data.totalPatients || 0;
            document.getElementById('stable-patients').textContent = data.stablePatients || 0;
            document.getElementById('critical-patients').textContent = data.criticalPatients || 0;
            document.getElementById('ai-diagnoses').textContent = data.aiDiagnoses || 0;
