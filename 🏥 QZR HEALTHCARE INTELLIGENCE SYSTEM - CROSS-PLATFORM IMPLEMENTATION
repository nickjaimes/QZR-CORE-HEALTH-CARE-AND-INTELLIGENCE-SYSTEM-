                box-shadow: 0 4px 16px rgba(0,0,0,0.1);
                z-index: 1000;
            `;
            document.body.appendChild(alertDiv);
            
            setTimeout(() => {
                alertDiv.remove();
            }, 5000);
        }
        
        // Initial load
        document.addEventListener('DOMContentLoaded', function() {
            // Load initial patient data
            loadPatientList();
            
            // Start real-time updates
            setInterval(() => {
                // Simulate real-time data updates
                updateStats({
                    totalPatients: Math.floor(120 + Math.random() * 20),
                    stablePatients: Math.floor(80 + Math.random() * 15),
                    criticalPatients: Math.floor(5 + Math.random() * 3),
                    aiDiagnoses: Math.floor(45 + Math.random() * 10)
                });
            }, 5000);
        });
        
        // Load patient list
        function loadPatientList() {
            const patients = [
                { id: 1, name: 'John Smith', condition: 'Hypertension', risk: 'low' },
                { id: 2, name: 'Maria Garcia', condition: 'Diabetes Type 2', risk: 'medium' },
                { id: 3, name: 'Robert Chen', condition: 'Post-operative Care', risk: 'low' },
                { id: 4, name: 'Sarah Johnson', condition: 'Asthma', risk: 'medium' },
                { id: 5, name: 'James Wilson', condition: 'Cardiac Monitoring', risk: 'high' }
            ];
            
            const patientList = document.getElementById('patientList');
            patientList.innerHTML = patients.map(patient => `
                <div class="patient-item">
                    <div class="patient-avatar">${patient.name.split(' ').map(n => n[0]).join('')}</div>
                    <div class="patient-info">
                        <div class="patient-name">${patient.name}</div>
                        <div class="patient-condition">${patient.condition}</div>
                    </div>
                    <div class="risk-badge risk-${patient.risk}">${patient.risk.toUpperCase()} RISK</div>
                </div>
            `).join('');
        }
    </script>
