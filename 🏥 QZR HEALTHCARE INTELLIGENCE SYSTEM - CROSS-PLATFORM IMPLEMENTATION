        // Analyze symptoms with AI
        function analyzeSymptoms() {
            const symptoms = document.querySelector('.diagnosis-input').value;
            if (!symptoms.trim()) {
                alert('Please enter patient symptoms');
                return;
            }
            
            document.getElementById('diagnosisResult').style.display = 'block';
            document.getElementById('diagnosisContent').innerHTML = 
                '<div class="loading"><i class="fas fa-spinner fa-spin"></i> AI is analyzing symptoms...</div>';
            
            // Simulate AI analysis
            setTimeout(() => {
                const diagnoses = [
                    "Likely viral upper respiratory infection. Recommend symptomatic treatment and monitoring.",
                    "Potential early-stage diabetes. Recommend HbA1c test and dietary consultation.",
                    "Consistent with tension headache. Consider stress management techniques.",
                    "Symptoms suggest gastrointestinal infection. Hydration and rest recommended."
                ];
                
                const randomDiagnosis = diagnoses[Math.floor(Math.random() * diagnoses.length)];
                const confidence = (85 + Math.random() * 10).toFixed(1);
                
                document.getElementById('diagnosisContent').innerHTML = 
                    `<p>${randomDiagnosis}</p>`;
                document.getElementById('confidenceLevel').innerHTML = 
                    `<strong>AI Confidence: ${confidence}%</strong>`;
            }, 2000);
        }
        
        // Handle real-time data from server
        function handleRealTimeData(data) {
            if (data.type === 'stats_update') {
                updateStats(data.data);
            } else if (data.type === 'patient_alert') {
                showPatientAlert(data.data);
            }
        }
        
        // Show patient alert
        function showPatientAlert(patient) {
            const alertDiv = document.createElement('div');
            alertDiv.className = 'patient-alert';
            alertDiv.innerHTML = `
                <strong>üö® Alert: ${patient.name}</strong>
                <p>${patient.condition} - ${patient.riskLevel} risk</p>
